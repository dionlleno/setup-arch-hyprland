// ===============================
// Waybar Config ‚Äì Hyprland (Nord)
// ===============================
{
  "height": 25,
  "spacing": 0,
  "margin": 5,

  "modules-left": [
    "hyprland/workspaces",
    "custom/media",
    "custom/waybar-media"
  ],

  "modules-center": ["clock"],

  "modules-right": [
    "tray",
    "sway/language",
    "wireplumber",
    "backlight",
    "network",
    "battery",
    "power-profiles-daemon",
    "custom/power"
  ],

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôá¶",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },

  "network": {
    "format-wifi": "{essid} Ôá´",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },

  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
  },

  "custom/waybar-media": {
    "return-type": "json",
    "exec": "waybar-media.py status",
    "on-click": "waybar-media.py playpause",
    "on-scroll-up": "waybar-media.py previous",
    "on-scroll-down": "waybar-media.py next",
    "escape": true
  },

  "hyprland/workspaces": {
    "format": "{name}",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "Ôâ®",
      "3": "ÔÑ°",
      "4": "ÔÜº",
      "5": "ÔÅµ",
      "active": "ÔÜí",
      "default": "ÔÑë"
    }
  },

  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "ÔÄ¶",
    "on-click": "pavucontrol",
    "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
  },

  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  "sway/language": {
    "format": "{layout}",
    "tooltip-format": "Current keyboard layout: {layout}",
    "on-click": "swaymsg input type:keyboard xkb_layout us,br"
  },
  "custom/power": {
    "format": "‚èª",
    "tooltip": "Menu de energia",
    "on-click": "~/.scripts/power-menu.sh"
  }
}
